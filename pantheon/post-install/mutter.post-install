# oneâ€‘liner: create the conf dir, extract the newest API version from the
# .pc files inside $PKG, and write the ld.so.conf snippet
mkdir -p "$PKG/etc/ld.so.conf.d" && \
echo "/usr/lib${LIBDIRSUFFIX}/mutter-$(basename -s .pc "$PKG"/usr/lib${LIBDIRSUFFIX}/pkgconfig/libmutter-*.pc \
      | sed 's/^libmutter-//' | sort -n | tail -1)/" \
  > "$PKG/etc/ld.so.conf.d/mutter.conf"
echo "/usr/lib${LIBDIRSUFFIX}/mutter-$(basename -s .pc "$PKG"/usr/lib${LIBDIRSUFFIX}/pkgconfig/libmutter-*.pc \
  | sed 's/^libmutter-//' | sort -n | tail -1)/plugins/" \
  > "$PKG/etc/ld.so.conf.d/mutter.conf"

