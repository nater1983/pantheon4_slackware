NOCONFIGURE=1 ./autogen.sh

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
    "${PANTHEON_MAKE_ARGS[@]}" \
    --enable-udev=yes \
   --enable-maintainer-flags=no \
   --enable-debug=yes \
   --enable-introspection=yes \
   --enable-shared=yes \
   --enable-static=no
make
make install DESTDIR=$PKG
