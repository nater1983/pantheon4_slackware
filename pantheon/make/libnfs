NOCONFIGURE=1 ./autogen.sh
autoreconf -vif

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
    "${PANTHEON_MAKE_ARGS[@]}" \
    --disable-dependency-tracking \
    --disable-silent-rules \
    --enable-static=no \
    --enable-utils \
    --enable-examples
make clean
make
make install DESTDIR=$PKG
