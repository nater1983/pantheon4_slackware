autoreconf -if

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
    "${PANTHEON_MAKE_ARGS[@]}" \
    --enable-dii \
    --enable-libpst-shared \
    --enable-python
make
make install DESTDIR=$PKG

make install-strip DESTDIR=$PKG \
    htmldir=/usr/doc/$PKGNAME-$MODULAR_PACKAGE_VERSION \
    htmldeveldir=/usr/doc/$PKGNAME-$MODULAR_PACKAGE_VERSION/devel

rm -f $PKG/usr/lib*/*.la $PKG/usr/lib*/python*/*/*.la
