NOCONFIGURE=1 ./autogen.sh

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
    "${PANTHEON_MAKE_ARGS[@]}" \
    --docdir=/usr/doc/$PKGNAME-$MODULAR_PACKAGE_VERSION \
    --enable-introspection=yes \
    --enable-vala-bindings=yes \
    --disable-schemas-compile
make
make install DESTDIR=$PKG
