sed -i 's/flatpak-builder/true/' filechooser-portal/meson.build

mkdir -p build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${PANTHEON_BUILD_ARGS[@]}" \
    $PANTHEON_OPT_ARGS \
    -Dsystemduserunitdir=no
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
