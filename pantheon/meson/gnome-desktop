mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${PANTHEON_BUILD_ARGS[@]}" \
    $PANTHEON_OPT_ARGS \
    -Dsystemd=disabled \
    -Ddesktop_docs=false \
    -Dintrospection=true \
    -Dgtk_doc=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
