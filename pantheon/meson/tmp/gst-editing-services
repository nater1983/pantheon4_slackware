mkdir build
cd build
  CFLAGS="$SLKCFLAGS -O2" \
  CXXFLAGS="$SLKCFLAGS -O2" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Ddoc=disabled \
    -Dexamples=disabled \
    -Dtests=disabled \
    -Dtools=enabled \
    -Dbash-completion=disabled \
    -Dxptv=enabled \
    -Dpython=disabled \
    -Dvalidate=disabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
