mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Ddnssd=true \
    -Dgoa=true \
    -Dgoogle=false \
    -Dlogind=true \
    -Dman=true \
    -Dnfs=false \
    -Dsystemduserunitdir=no \
    -Donedrive=true \
    -Dtmpfilesdir=no
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
