mkdir -p build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Dman=true \
    -Dgtk_doc=false \
    -Dsystemd=false \
    -Dlibsystemd=libelogind \
    -Dpam=true \
    -Dpam_modules_dir=/lib${LIBDIRSUFFIX}/security
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
