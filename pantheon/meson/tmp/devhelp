mkdir -p build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Dplugin_emacs=true \
    -Dplugin_gedit=true \
    -Dintrospection=true \
    -Dplugin_vim=true
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
