mkdir build
cd build
  CFLAGS="$SLKCFLAGS -fno-semantic-interposition" \
  CXXFLAGS="$SLKCFLAGS -fno-semantic-interposition" \
  LDFLAGS+="$SLKCFLAGS -Wl,-Bsymbolic-functions" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Dgtk_doc=false \
    -Dman=true \
    -Dtests=false \
    -Dsystemd=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
