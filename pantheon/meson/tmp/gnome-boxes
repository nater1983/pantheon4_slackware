mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${GNOME_BUILD_ARGS[@]}" \
    $GNOME_OPT_ARGS \
    -Ddistributor_name="Gnome From Scratch" \
    -Ddistributor_version="48" \
    -Dinstalled_tests=false \
    -Dflatpak=true \
    -Duefi=true \
    -Dprofile=default
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
