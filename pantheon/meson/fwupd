mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${PANTHEON_BUILD_ARGS[@]}" \
    $PANTHEON_OPT_ARGS \
    -Dtests=false \
    -Dumockdev_tests=disabled \
    -Dvendor_ids_dir=/usr/share/hwdata/ \
    -Db_lto=true \
    -Dbuild=all \
    -Dsystemd=disabled \
    -Delogind=enabled \
    -Dfirmware-packager=true \
    -Dgcab:docs=false \
    -Dhsi=enabled \
    -Dlvfs=true \
    -Dman=true \
    -Dbluez=enabled \
    -Dpassim=disabled \
    -Defi_binary=false \
    -Dplugin_flashrom=disabled \
    -Dplugin_uefi_capsule_splash=true \
    -Dsupported_build=enabled
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
