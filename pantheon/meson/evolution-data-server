export LDFLAGS="-L/usr/lib64/icu -licuuc -licui18n"
mkdir cmake-build
cd cmake-build
  cmake .. \
    "${PANTHEON_CMAKE_ARGS[@]}" \
    -DENABLE_VALA_BINDINGS=ON \
    -DENABLE_INSTALLED_TESTS=OFF \
    -DWITH_OPENLDAP=OFF \
    -DWITH_KRB5=ON \
    -DENABLE_INTROSPECTION=ON \
    -DENABLE_GTK_DOC=OFF \
    -DWITH_PRIVATE_DOCS=OFF \
    -DENABLE_SCHEMAS_COMPILE=ON \
    -DWITH_OPENLDAP=ON \
    -DENABLE_SMIME=ON \
    -DENABLE_GTK=ON \
    -DENABLE_CANBERRA=ON \
    -DENABLE_EXAMPLES=OFF \
    -DENABLE_GOA=ON \
    -DWITH_LIBDB=ON \
    -DENABLE_WEATHER=ON \
    -DENABLE_LARGEFILE=ON \
    -DWITH_PHONENUMBER=OFF \
    -DWITH_SUNLDAP=ON \
    -DWITH_SYSTEMDUSERUNITDIR=no \
    -G Ninja
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
