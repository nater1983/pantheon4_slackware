mkdir build
cd build
  CFLAGS="$SLKCFLAGS" \
  CXXFLAGS="$SLKCFLAGS" \
  meson setup ..\
    "${PANTHEON_BUILD_ARGS[@]}" \
    $PANTHEON_OPT_ARGS \
    -Dgtk-doc=false \
    -Dnmea-source=true \
    -Ddefault-wifi-url="https://api.beacondb.net/v1/geolocate" \
    -Ddefault-wifi-submit-url="https://api.beacondb.net/v2/geosubmit"
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
