mkdir build
cd build
  CFLAGS="$SLKCFLAGS -fno-semantic-interposition" \
  CXXFLAGS="$SLKCFLAGS -fno-semantic-interposition" \
  LDFLAGS+="$SLKCFLAGS -Wl,-Bsymbolic-functions" \
  meson setup ..\
    "${PANTHEON_BUILD_ARGS[@]}" \
    $PANTHEON_OPT_ARGS \
    -Degl_device=true \
    -Dwayland_eglstream=true \
    -Dcogl_tests=false \
    -Dclutter_tests=false \
    -Dtests=false \
    -Dbash_completion=false \
    -Dxwayland_initfd=auto \
    -Dinstalled_tests=false
  "${NINJA:=ninja}"
  DESTDIR=$PKG $NINJA install
cd ..
