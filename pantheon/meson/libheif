sed -i '/install(CODE "execute_process(COMMAND/ s|\${CMAKE_INSTALL_PREFIX}/||g' examples/CMakeLists.txt

mkdir cmake-build
cd cmake-build
  cmake .. \
    "${PANTHEON_CMAKE_ARGS[@]}" \
    -DWITH_LIBDE265_PLUGIN:BOOL=ON \
    -DWITH_FFMPEG_DECODER=ON \
    -DWITH_X265=ON \
    -DWITH_RAV1E=ON \
    -DWITH_SvtEnc=ON \
    -DWITH_DAV1D=ON \
    -DWITH_DAV1D_PLUGIN=ON
make
make install DESTDIR=$PKG
